#!/usr/bin/env bash
maindir()
{
    echo "$(dirname "$(dirname "$(readlink -f "${BASH_SOURCE}")")")"
}

IMAGE="$1"

[ -n "${IMAGE}" ] || {
    echo "Please sepcify an image name. It must follow the format: vendor/name:version."
    exit 1
}

docker run --rm "${IMAGE}" -v | grep -Poe '(?<=PHP )\d+\.\d+\.\d+' > "$(maindir)"/php-version